      }
    },
    {
      "clientId": "api",
      "bearerOnly": true,
      "protocol": "openid-connect",
      "defaultClientScopes": [ "user_info", "roles-as-roles", "offline_access" ]
    }
  ],

  "attributes": {
    "sso-session-idle": "1800",
